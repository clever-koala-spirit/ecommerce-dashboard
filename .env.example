# === Slay Season — Ecommerce Analytics Platform ===
# Copy this to .env and fill in your values
# NEVER commit .env to version control

# --- Server ---
PORT=4000
NODE_ENV=production
APP_URL=https://slayseason.com
FRONTEND_URL=https://slayseason.com

# --- Security ---
# REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=
# REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# --- Shopify App (REQUIRED — from Shopify Partner Dashboard) ---
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_SCOPES=read_orders,read_products,read_customers,read_analytics,read_inventory

# --- Shopify OAuth for User Login (optional) ---
SHOPIFY_APP_CLIENT_ID=
SHOPIFY_APP_CLIENT_SECRET=

# --- Meta OAuth (optional — one-click connect) ---
META_APP_ID=
META_APP_SECRET=

# --- Facebook OAuth for User Login (optional) ---
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# --- Apple OAuth for User Login (optional) ---
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# --- Meta Ads (optional — legacy direct token) ---
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=
META_BUSINESS_ID=

# --- Google OAuth (optional — one-click connect for Google Ads & GA4) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# --- Google Ads (optional — legacy direct tokens) ---
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# --- Klaviyo OAuth (optional — one-click connect) ---
KLAVIYO_CLIENT_ID=
KLAVIYO_CLIENT_SECRET=

# --- Klaviyo (optional — legacy direct API key) ---
KLAVIYO_API_KEY=

# --- Google Analytics 4 (optional) ---
GA4_PROPERTY_ID=
GA4_SERVICE_ACCOUNT_KEY_PATH=

# --- Stripe Billing (recommended for commercial use) ---
STRIPE_PUBLISHABLE_KEY=pk_test_...  # or pk_live_... for production
STRIPE_SECRET_KEY=sk_test_...       # or sk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_...     # From Stripe webhook endpoint
# Stripe Price IDs for subscription tiers
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_GROWTH=price_...
STRIPE_PRICE_SCALE=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# --- Email Service (recommended for user notifications) ---
SENDGRID_API_KEY=SG...
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Company Name
SUPPORT_EMAIL=support@yourdomain.com
# Optional: SendGrid template IDs for branded emails
SENDGRID_TEMPLATE_VERIFICATION=d-...
SENDGRID_TEMPLATE_PASSWORD_RESET=d-...
SENDGRID_TEMPLATE_WELCOME=d-...
SENDGRID_TEMPLATE_PAYMENT_FAILED=d-...
SENDGRID_TEMPLATE_SUBSCRIPTION_CANCELLED=d-...
SENDGRID_TEMPLATE_DATA_EXPORT=d-...

# --- Database (production) ---
# For production, use PostgreSQL instead of SQLite
DATABASE_URL=postgresql://username:password@host:5432/database_name

# --- AI Assistant (optional — choose one provider) ---
AI_PROVIDER=openai  # or anthropic, ollama
AI_API_KEY=
AI_MODEL=gpt-4o     # or claude-3-opus, llama2
OLLAMA_BASE_URL=http://localhost:11434

# --- Monitoring & Logging (optional) ---
SENTRY_DSN=https://...
LOG_LEVEL=info      # debug, info, warn, error

# --- CORS (production) ---
# Add your domain to the allowed origins in middleware/security.js
